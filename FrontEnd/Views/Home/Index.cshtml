        function write(s, p, o) {
            p.innerHTML = s;
            o.replaceChild(p, p);
        }

        function write2(s) {
            p2.innerHTML = s;
            output2.replaceChild(p2, p2);
        }

        function doConnect() {
            socket = new WebSocket(uri);
            socket.onopen = function (e) {
                //write("opened " + uri);
                doSend();
            };
            socket.onclose = function (e) {
                //write("closed");
            };
